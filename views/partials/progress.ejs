<fieldset>
  <legend>Progress Feedback:</legend>
  <div class="flex-container-progress">

    <!-- Acceptance & make contact -->
    <div class="flex-item">
      <fieldset>
        <legend>Accept Lead & Make Contact</legend>

        <div class="flex-container-sub">

          <div class="flex-item">
            Accept Assignment:
            <input id="lead-accept" type="radio" name="leadAccept" value="yes"/>
            <label for="lead-accept"> Yes </label>
            <input id="lead-reject" type="radio" name="leadAccept" value="no"/>
            <label for="lead-reject"> No </label>
          </div>

          <div class="flex-item">
            <input id="rejectReason"
                    type="text"
                    placeholder="Reject Reason"
                    list="rejectReasons"
                    name="rejectReason"
                    size="15"
                    disabled
            />
            <datalist id="rejectReasons">
              <option value="Off Duty">
              <option value="On Leave">
              <option value="No capacity">
              <option value="No experience">
              <option value="Not accredited">
              <option value="Not in my area">
              <option value="Not well">
            </datalist>
          </div>

          <div class="flex-item">
            <label for="contactDate"> Contacted </label>
            <input id="contactDate" class="accept-yes" type="date" name="contactDate" disabled />

            <input id="noContact" class="accept-yes" type="checkbox" name="noContact" value="yes" disabled />
            <label for="noContact"> No Contact </label>
          </div>

          <div class="flex-item">
            Viable lead?:
            <input id="viable" class="accept-yes" type="radio" name="viability" value="yes" disabled />
            <label for="viable"> Yes </label>
            <input id="not-viable" class="accept-yes" type="radio" name="viability" value="no" disabled />
            <label for="not-viable"> No </label>
          </div>

          <div class="flex-item">
            <input id="not-viable-reason" type="text" placeholder="Not Viable Reason" list="reasons" name="notViableReason" size="18" disabled />
            <datalist id="reasons">
              <option value="Claims history">
              <option value="Unacceptable risk">
              <option value="No cover for risk">
            </datalist>
          </div>
        </div>
      </fieldset>
    </div>

    <!-- Quoting -->

    <div class="flex-item">
      <fieldset>
        <legend>Quoting and Acceptance</legend>

        <div class="flex-container-sub">

          <div class="flex-item">
            <label for="quoteDate"> Issue Date </label>
            <input id="quoteDate" class="accept-yes" type="date" name="quoteDate" disabled />

            <label for="quoteNum"> Number </label>
            <input id="quoteNum" class="accept-yes" type="text" name="quoteNum" size="15" disabled />
          </div>

          <div class="flex-item">
            <input id="quoteAccepted" class="accept-yes" type="radio" name="acceptance" value="accepted" disabled />
            <label for="quoteAccepted"> Accepted </label>
            <input id="quoteDeclined" class="accept-yes" type="radio" name="acceptance" value="declined" disabled />
            <label for="quoteDeclined"> Declined </label>
            <input id="quoteExpired" class="accept-yes" type="radio" name="acceptance" value="expired" disabled />
            <label for="quoteExpired"> Expired </label>
          </div>

          <div class="flex-item">
            <label for="eventDate"> Date </label>
            <input id="eventDate" type="date" name="eventDate" disabled />
          </div>

          <div class="flex-item">
            <input id="declineReason"
                    type="text"
                    list="decline-reasons"
                    placeholder="Decline Reason"
                    name="declineReason"
                    size="20"
                    disabled
            />
            <datalist id="decline-reasons">
              <option value="Cannot afford">
              <option value="To expensive">
              <option value="Another provider">
              <option value="Excess to high">
              <option value="No response">
            </datalist>
          </div>
          <div class="flex-item">
            <input id="pend" class="accept-yes" type="checkbox" name="pend" value="yes" disabled />
            <label for="pend"> follow-up </label>
            <label for="pendDate"> </label>
            <input id="pendDate" type="date" name="pendDate" disabled />
          </div>
        </div>
      </fieldset>
    </div>

    <!-- Issue Policy -->
    <div class="flex-item">
      <fieldset>
        <legend>Policy Issuance</legend>

        <div class="flex-container-sub">

          <div class="flex-item">
            <label for="issueDate">Issue Date</label>
            <input id="issueDate" class="accept-yes" type="date" name="issueDate" disabled />
          </div>
          <div class="flex-item">
            <label for="polNum"> Policy Number </label>
            <input id="polNum" class="accept-yes" type="text" name="polNum" size="15" disabled />
          </div>
          <div class="flex-item">
            <label for="premium"> Premium * </label>
            <input id="premium" class="accept-yes" type="text" name="premium" size="10" disabled />
          </div>
          <div class="flex-item">
            <input id="annually" class="accept-yes" type="radio" name="frequency" value="annually" disabled />
            <label for="annually"> annually </label>
            <input id="monthly" class="accept-yes" type="radio" name="frequency" value="monthly" disabled />
            <label for="monthly"> monthly </label>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</fieldset>
<div id="lead-progress-buttons" style="display:none">
  <button id="progress-update" type="button" >Update Lead Progress</button>
  <button id="progress-reset" type="button" >Cancel</button>
</div>