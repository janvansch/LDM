<div id=panelViewLead style="display:none">
  <span class="closeP" onclick="javascript:closeViewLeads()">&times;</span>
  <h3 id="title">Click Find to View leads</h3>
  <hr/>
  <div id="lead-selector">
    <!-- Filter for leads list -->
    <b>Selection Criteria:</b>
    <br/>
    Lead Ref No.
    <input type="text" id="view-lead-ref-no" placeholder="Lead Ref No." title="Lead Ref No.">
    Contact Surname
    <input type="text" id="view-lead-con-surname" placeholder="Contact Surname" title="Contact Surname">
    Contact Name
    <input type="text" id="view-lead-con-name" placeholder="Contact Name" title="Contact Name">
    <br/>
    Entity Name
    <input type="text" id="view-lead-org-name" placeholder="Organisation Name" title="Organisation Name">
    ID/Registration Number
    <input type="text" id="view-lead-ref-id" placeholder="ID/Registration No." title="ID/Registration Nunmber">
    <!-- Find button -->
    <input id="find-lead-btn" type="button" value="Find" onclick="javascript:listLeads()"/>
    <!-- Add Lead Button -->
    <input id="add-lead-btn" type="button" value="Add Lead" onclick="javascript:addLead()"/>
  </div>
  <b>Find Result:</b>
  <br/>
  <hr/>
  <!--
    Place holder to display a list of Leads
    The following layouts use this:
      1 : Practice leads view
      4 : Adviser leads view
      5 : Agent leads view
  -->
  <div id="tPos">
    Enter lead selection criteria and click "Find"
  </div>
  <hr/>
</div>